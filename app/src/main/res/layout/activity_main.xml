<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.black.multi.customviewsample.demo01.CustomTextView
            android:id="@+id/custom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            app:customText="点我"
            app:customTextColor="@color/colorPrimary"
            app:customTextSize="16sp" />

        <com.black.multi.customviewsample.demo02.ArcProgressbar
            android:id="@+id/arc_progressbar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:outerColor="@color/colorAccent"
            app:innerColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            app:customTextSize="25sp"
            app:progressTextColor="@color/colorPrimaryDark"
            android:visibility="gone"
            app:progressWidth="6"/>

        <com.black.multi.customviewsample.demo03.ChangeColorTextView
            android:id="@+id/changeTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="我是 canvas.clipRect() 方法的应用"/>
    </LinearLayout>
</ScrollView>